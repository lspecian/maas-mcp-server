{
  "name": "maas-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Canonical MAAS API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --config jest.config.cjs",
    "test:integration": "jest --config src/integration_tests/jest.integration.config.js",
    "test:all": "npm run test && npm run test:integration",
    "test:report": "jest --config src/integration_tests/jest.integration.config.js --reporters=jest-junit",
    "check-deps": "node scripts/check-dependencies.cjs",
    "lint": "eslint . --ext .ts",
    "inspector": "mcp-inspector"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lspecian/maas-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "maas",
    "api",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lspecian/maas-mcp-server/issues"
  },
  "homepage": "https://github.com/lspecian/maas-mcp-server#readme",
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^1.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/node-fetch": "^2.6.12",
    "@types/oauth": "^0.9.6",
    "@types/supertest": "^6.0.3",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "axios": "^1.9.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "xml2js": "^0.6.2",
    "jest-junit": "^16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "form-data": "^4.0.0",
    "formdata-node": "^6.0.3",
    "helmet": "^7.1.0",
    "node-fetch": "^2.7.0",
    "oauth": "^0.10.2",
    "oauth-1.0a": "^2.2.6",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "winston": "^3.13.0",
    "zod": "^3.24.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs"
  }
}
